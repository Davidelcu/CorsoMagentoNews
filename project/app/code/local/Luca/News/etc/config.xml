<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <modules>
        <Luca_News>
            <version>0.2.0</version>
        </Luca_News>
    </modules>
    <global>
        <blocks>
            <luca_news>
                <class>Luca_News_Block</class>
            </luca_news>
        </blocks>
        <helpers>
            <luca_news>
                <class>Luca_News_Helper</class>
            </luca_news>
        </helpers>
        <models>
            <luca_news>
                <class>Luca_News_Model</class>
                <resourceModel>luca_news_resource</resourceModel>
            </luca_news>
            <luca_news_resource>
                <class>Luca_News_Model_Resource</class>
                <entities>
                    <category>
                        <table>luca_news_category</table>
                    </category>
                    <story>
                        <table>luca_news_story</table>
                    </story>
                </entities>
            </luca_news_resource>
        </models>
        <resources>
            <luca_news_setup>
                <setup>
                    <module>Luca_News</module>
                </setup>
            </luca_news_setup>
        </resources>
    </global>
    <frontend>
        <translate>
            <modules>
                <luca_news>
                    <files>
                        <default>Luca_News.csv</default>
                    </files>
                </luca_news>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <luca_news>
                <use>admin</use>
                <args>
                    <module>Luca_News</module>
                    <frontName>luca_news</frontName>
                </args>
            </luca_news>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <luca_news>
                    <files>
                        <default>Luca_News.csv</default>
                    </files>
                </luca_news>
            </modules>
        </translate>
        <layout>
            <updates>
                <luca_news>
                    <file>luca_news.xml</file>
                </luca_news>
            </updates>
        </layout>
    </adminhtml>
    <default>

    </default>
</config>